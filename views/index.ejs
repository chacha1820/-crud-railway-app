<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>CRUD App</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <h1>üåø CRUD Application</h1>

  <section class="form-section">
    <h2>Add New Item</h2>
    <form action="/add" method="POST" class="form" enctype="multipart/form-data">
      <input type="text" name="name" placeholder="Item Name" required />
      <textarea name="description" placeholder="Description" required></textarea>
      <input type="file" name="image" accept=".png,.jpeg,.jpg,.bmp" />
      <button type="submit" class="btn add">‚ûï Add Item</button>
    </form>
  </section>

  <section>
    <h2>Items List</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.description %></td>
            <td>
              <% if (item.image) { %>
                <img src="/uploads/<%= item.image %>" alt="<%= item.name %>" style="width: 80px; height: auto;" />
              <% } else { %>
                No Image
              <% } %>
            </td>
            <td class="actions">
              <div class="action-buttons">
                <a href="/edit/<%= item.id %>" class="btn edit">‚úèÔ∏è Edit</a>
                <form action="/delete/<%= item.id %>" method="POST">
                  <button type="submit" class="btn delete" onclick="return confirm('Are you sure?')">üóëÔ∏è Delete</button>
                </form>
              </div>
            </td>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </section>
</body>
</html>